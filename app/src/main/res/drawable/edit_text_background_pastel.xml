<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 포커스된 상태 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_background_pastel" />
            <stroke 
                android:width="2dp" 
                android:color="@color/pastel_blue_400" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_background_pastel" />
            <stroke 
                android:width="1dp" 
                android:color="@color/border_pastel" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector> 