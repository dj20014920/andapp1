<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@color/background_pastel"
    android:layout_marginVertical="2dp">

    <!-- 항목 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expenseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="항목명"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_pastel"
            android:layout_marginBottom="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/expenseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_pastel"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/expensePayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제자"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_pastel"
                android:background="@drawable/payer_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 금액 -->
    <TextView
        android:id="@+id/expenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0원"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color" />

</LinearLayout> 