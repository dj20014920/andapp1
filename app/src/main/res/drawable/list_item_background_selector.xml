<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 아이템이 눌렸을 때 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pastel_blue_50" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background_pastel" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/border_pastel" />
        </shape>
    </item>
</selector> 